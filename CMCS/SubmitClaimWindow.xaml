<Window x:Class="CMCS.SubmitClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit New Claim - CMCS" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <Grid Margin="15">
        <!-- Header -->
        <DockPanel Background="#FF252526" VerticalAlignment="Top" Height="50" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="15,0">
                <Button Content="← Back" Padding="10,5" Background="Transparent" Foreground="#FF4ECDC4" BorderThickness="0" Click="btnBack_Click"/>
                <TextBlock Text="SUBMIT NEW MONTHLY CLAIM" Foreground="White" FontWeight="Bold" Margin="20,0" VerticalAlignment="Center"/>
            </StackPanel>
        </DockPanel>

        <!-- Claim Form -->
        <Grid Margin="0,65,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Month Selection -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="Claim for: " Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Name="cmbMonth" Width="120" Margin="5" Padding="10" SelectedIndex="0">
                    <ComboBoxItem>January 2024</ComboBoxItem>
                    <ComboBoxItem>February 2024</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <!-- Claim Items Grid -->
            <Border Grid.Row="1" Background="#FF3E3E42" CornerRadius="5" Padding="10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <Button Name="btnAddItem" Content="+ Add Item" Margin="5" Padding="10,5" 
                                Background="#FF4ECDC4" Foreground="Black" FontWeight="Bold" 
                                BorderThickness="0" Click="btnAddItem_Click"/>
                    </StackPanel>

                    <DataGrid Name="dgClaimItems" AutoGenerateColumns="False" HeadersVisibility="Column" 
                              Background="#FF505050" BorderThickness="0" Height="250">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Module Code" Width="*"/>
                            <DataGridTextColumn Header="Description" Width="2*"/>
                            <DataGridTextColumn Header="Hours" Width="Auto"/>
                            <DataGridTextColumn Header="Rate (R)" Width="Auto"/>
                            <DataGridTextColumn Header="Subtotal (R)" Width="Auto" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Name="btnCalculate" Content="Calculate Total" Margin="5" Padding="15,8" 
                        Background="#FF1E90FF" Foreground="White" FontWeight="Bold" 
                        BorderThickness="0" Click="btnCalculate_Click"/>
                <Button Name="btnUpload" Content="Upload Documents" Margin="5" Padding="15,8" 
                        Background="#FFDBAE1F" Foreground="White" FontWeight="Bold" 
                        BorderThickness="0" Click="btnUpload_Click"/>
            </StackPanel>

            <!-- Total and Submit -->
            <Border Grid.Row="3" Background="#FF3E3E42" CornerRadius="5" Padding="15" Margin="0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Grand Total: " Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Name="lblGrandTotal" Text="R 0.00" Foreground="#FF4ECDC4" FontSize="20" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center" Width="100"/>
                    <Button Name="btnSubmit" Content="SUBMIT CLAIM" Margin="20,0,0,0" Padding="20,12" 
                            Background="#FF4ECDC4" Foreground="Black" FontWeight="Bold" 
                            BorderThickness="0" Click="btnSubmit_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>