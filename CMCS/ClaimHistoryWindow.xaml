<Window x:Class="CMCS.ClaimHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claim History - CMCS"  
        Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <Grid>
        <!-- Navigation Sidebar (Same as Lecturer Dashboard) -->
        <Border Width="220" Background="#FF252526" HorizontalAlignment="Left">
            <StackPanel>
                <StackPanel Margin="15,20" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE1E4;" FontFamily="Segoe UI Symbol" FontSize="30" Foreground="#FF4ECDC4" HorizontalAlignment="Center"/>
                    <TextBlock Text="CMCS" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5"/>
                    <TextBlock Text="Lecturer Portal" Foreground="#FFADADAD" FontSize="11" HorizontalAlignment="Center"/>
                </StackPanel>

                <Separator Background="#FF3E3E42" Margin="10,0"/>

                <StackPanel Margin="10,20">
                    <Button Content="Dashboard" Style="{StaticResource NavButtonStyle}" Click="btnDashboard_Click"/>
                    <Button Content="New Claim" Style="{StaticResource NavButtonStyle}" Click="btnNewClaim_Click"/>
                    <Button Content="Claim History" Style="{StaticResource NavButtonStyle}" Background="#FF4ECDC4" Foreground="Black"/>
                    <Button Content="Documents" Style="{StaticResource NavButtonStyle}" Click="btnDocuments_Click"/>
                    <Button Content="Profile" Style="{StaticResource NavButtonStyle}" Click="btnProfile_Click"/>
                </StackPanel>

                <Separator Background="#FF3E3E42" Margin="10,20"/>

                <StackPanel Margin="15,0" VerticalAlignment="Bottom">
                    <TextBlock Text="Dr. Sarah Smith" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock Text="sarah.smith@university.ac.za" Foreground="#FFADADAD" FontSize="10" HorizontalAlignment="Center" Margin="0,5"/>
                    <Button Content="Logout" Margin="0,20,0,10" Padding="10,5" 
                            Background="Transparent" Foreground="#FF4ECDC4" BorderThickness="0"
                            Click="btnLogout_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="220,0,0,0">
            <DockPanel Background="#FF252526" VerticalAlignment="Top" Height="60">
                <TextBlock Text="CLAIM HISTORY" Foreground="White" FontSize="16" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="20,0"/>
            </DockPanel>

            <Grid Margin="20" VerticalAlignment="Top">
                <!-- Filter Options -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,30">
                    <ComboBox Width="120" Margin="5" Padding="10" SelectedIndex="0">
                        <ComboBoxItem>All Status</ComboBoxItem>
                        <ComboBoxItem>Submitted</ComboBoxItem>
                        <ComboBoxItem>Approved</ComboBoxItem>
                        <ComboBoxItem>Rejected</ComboBoxItem>
                    </ComboBox>
                    <ComboBox Width="120" Margin="5" Padding="10" SelectedIndex="0">
                        <ComboBoxItem>All Months</ComboBoxItem>
                        <ComboBoxItem>January 2024</ComboBoxItem>
                        <ComboBoxItem>February 2024</ComboBoxItem>
                        <ComboBoxItem>March 2024</ComboBoxItem>
                    </ComboBox>
                    <Button Content="Apply Filters" Margin="5" Padding="10,5" 
                            Background="#FF1E90FF" Foreground="White" FontWeight="Bold"/>
                </StackPanel>

                <!-- Claims History Table -->
                <Border Background="#FF3E3E42" CornerRadius="5" Padding="10" Margin="0,80,0,0">
                    <StackPanel>
                        <DataGrid Name="dgClaimHistory" IsReadOnly="True" AutoGenerateColumns="False" 
                                  HeadersVisibility="Column" Background="#FF505050" BorderThickness="0" Height="400">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Claim ID" Width="Auto" Binding="{Binding ClaimId}"/>
                                <DataGridTextColumn Header="Month" Width="*" Binding="{Binding Month}"/>
                                <DataGridTextColumn Header="Hours" Width="Auto" Binding="{Binding Hours}"/>
                                <DataGridTextColumn Header="Amount" Width="Auto" Binding="{Binding Amount}"/>
                                <DataGridTextColumn Header="Submitted Date" Width="Auto" Binding="{Binding SubmittedDate}"/>
                                <DataGridTextColumn Header="Status" Width="Auto" Binding="{Binding Status}"/>
                                <DataGridTemplateColumn Header="Actions" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="View Details" Padding="6,2" Background="#FF1E90FF" Foreground="White" FontSize="11"
                                                    Click="btnViewDetails_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>