<Window x:Class="CMCS.LecturerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Dashboard - CMCS" 
        Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <Grid>
        <!-- Navigation Sidebar -->
        <Border Width="220" Background="#FF252526" HorizontalAlignment="Left">
            <StackPanel>
                <!-- Logo/Header -->
                <StackPanel Margin="15,20" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE1E4;" FontFamily="Segoe UI Symbol" FontSize="30" Foreground="#FF4ECDC4" HorizontalAlignment="Center"/>
                    <TextBlock Text="CMCS" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5"/>
                    <TextBlock Text="Lecturer Portal" Foreground="#FFADADAD" FontSize="11" HorizontalAlignment="Center"/>
                </StackPanel>

                <Separator Background="#FF3E3E42" Margin="10,0"/>

                <StackPanel Margin="10,20">
                    <Button x:Name="btnDashboard" Content="Dashboard" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click"/>
                    <Button x:Name="btnNewClaim" Content="New Claim" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click"/>
                    <Button x:Name="btnHistory" Content="Claim History" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click"/>
                    <Button x:Name="btnDocuments" Content="Documents" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click"/>
                    <Button x:Name="btnProfile" Content="Profile" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click"/>
                </StackPanel>
                
                <Separator Background="#FF3E3E42" Margin="10,20"/>

                <!-- User Info & Logout -->
                <StackPanel Margin="15,0" VerticalAlignment="Bottom">
                    <TextBlock Text="Dr. Sarah Smith" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock Text="sarah.smith@university.ac.za" Foreground="#FFADADAD" FontSize="10" HorizontalAlignment="Center" Margin="0,5"/>
                    <!-- Add this to the navigation menu section, before the logout button -->
                    <Separator Background="#FF3E3E42" Margin="10,10"/>
                    <!-- Add this to the navigation menu section, before the logout button -->
                    <Separator Background="#FF3E3E42" Margin="0,10"/>
                    <Button x:Name="btnSwitchRole" Content="Switch to Coordinator View" Style="{StaticResource NavButtonStyle}" Click="btnSwitchRole_Click"/>
                    <Button Content="Logout" Margin="0,20,0,10" Padding="10,5" 
                            Background="Transparent" Foreground="#FF4ECDC4" BorderThickness="0"
                            Click="btnLogout_Click" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Margin="220,0,0,0">
            <!-- Header Bar -->
            <DockPanel Background="#FF252526" VerticalAlignment="Top" Height="60">
                <TextBlock Text="DASHBOARD" Foreground="White" FontSize="16" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="20,0"/>
            </DockPanel>

            <!-- Main Content -->
            <Grid Margin="20" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Welcome and Quick Stats -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,30">
                    <TextBlock Text="Welcome back, Dr. Smith" FontSize="22" Foreground="White" FontWeight="Light" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Quick Stats Cards -->
                <WrapPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,70,0,30">
                    <Border Background="#FF3E3E42" CornerRadius="8" Width="200" Height="100" Margin="10">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="5" Foreground="#FF4ECDC4" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Claims" Foreground="White" FontSize="12" HorizontalAlignment="Center" Margin="0,5"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FF3E3E42" CornerRadius="8" Width="200" Height="100" Margin="10">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="3" Foreground="#FF1E90FF" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Approved" Foreground="White" FontSize="12" HorizontalAlignment="Center" Margin="0,5"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FF3E3E42" CornerRadius="8" Width="200" Height="100" Margin="10">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="1" Foreground="#FFDBAE1F" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Pending" Foreground="White" FontSize="12" HorizontalAlignment="Center" Margin="0,5"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Claims History -->
                <Border Grid.Row="1" Background="#FF3E3E42" CornerRadius="5" Padding="10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="Recent Claims" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <Button Content="View All" Padding="8,4" Background="Transparent" Foreground="#FF4ECDC4" BorderThickness="0"/>
                        </StackPanel>

                        <DataGrid Name="dgClaims" IsReadOnly="True" AutoGenerateColumns="False" 
                                  HeadersVisibility="Column" Background="#FF505050" BorderThickness="0" Height="250" SelectionChanged="dgClaims_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Claim ID" Width="Auto" Binding="{Binding ClaimId}"/>
                                <DataGridTextColumn Header="Month" Width="*" Binding="{Binding Month}"/>
                                <DataGridTextColumn Header="Hours" Width="Auto" Binding="{Binding Hours}"/>
                                <DataGridTextColumn Header="Amount" Width="Auto" Binding="{Binding Amount}"/>
                                <DataGridTextColumn Header="Status" Width="Auto" Binding="{Binding Status}"/>
                                <DataGridTemplateColumn Header="Action" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="View" Padding="6,2" Background="#FF1E90FF" Foreground="White" FontSize="11"
                                                    Click="btnViewClaim_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>