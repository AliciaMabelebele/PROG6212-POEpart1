<Window x:Class="CMCS.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile - CMCS" 
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <Grid Margin="15">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="My Profile" Foreground="White" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Profile Form -->
            <Border Background="#FF3E3E42" CornerRadius="5" Padding="20">
                <StackPanel>
                    <!-- Personal Information -->
                    <TextBlock Text="Personal Information" Foreground="#FF4ECDC4" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <StackPanel Width="200" Margin="0,0,10,0">
                            <TextBlock Text="First Name" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox Text="Sarah" Background="#FF505050" Foreground="White" BorderThickness="0" Padding="10"/>
                        </StackPanel>
                        <StackPanel Width="200">
                            <TextBlock Text="Last Name" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox Text="Smith" Background="#FF505050" Foreground="White" BorderThickness="0" Padding="10"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Email" Foreground="White" Margin="0,0,0,5"/>
                        <TextBox Text="sarah.smith@university.ac.za" Background="#FF505050" Foreground="White" BorderThickness="0" Padding="10"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Department" Foreground="White" Margin="0,0,0,5"/>
                        <TextBox Text="Computer Science" Background="#FF505050" Foreground="White" BorderThickness="0" Padding="10"/>
                    </StackPanel>

                    <!-- Security -->
                    <TextBlock Text="Security" Foreground="#FF4ECDC4" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Current Password" Foreground="White" Margin="0,0,0,5"/>
                        <PasswordBox Password="••••••••" Background="#FF505050" Foreground="White" BorderThickness="0" Padding="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <StackPanel Width="200" Margin="0,0,10,0">
                            <TextBlock Text="New Password" Foreground="White" Margin="0,0,0,5"/>
                            <PasswordBox Background="#FF505050" Foreground="White" BorderThickness="0" Padding="10"/>
                        </StackPanel>
                        <StackPanel Width="200">
                            <TextBlock Text="Confirm Password" Foreground="White" Margin="0,0,0,5"/>
                            <PasswordBox Background="#FF505050" Foreground="White" BorderThickness="0" Padding="10"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                        <Button Content="Save Changes" Width="120" Margin="5" Padding="10,5" 
                                Background="#FF4ECDC4" Foreground="Black" FontWeight="Bold"
                                Click="btnSave_Click"/>
                        <Button Content="Cancel" Width="120" Margin="5" Padding="10,5" 
                                Background="#FF505050" Foreground="White" FontWeight="Bold"
                                Click="btnCancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Back Button -->
            <Button Content="← Back to Dashboard" HorizontalAlignment="Left" Margin="0,20,0,0" Padding="10,5" 
                    Background="Transparent" Foreground="#FF4ECDC4" BorderThickness="0"
                    Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>