<Window x:Class="CMCS.CoordinatorDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Dashboard - CMCS" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <Grid>
        <!-- Header Bar -->
        <DockPanel Background="#FF252526" VerticalAlignment="Top" Height="60">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="15,0">
                <TextBlock Text="&#xE1E4;" FontFamily="Segoe UI Symbol" FontSize="20" Foreground="#FF4ECDC4" VerticalAlignment="Center"/>
                <TextBlock Text="CLAIMS APPROVAL PORTAL" Foreground="White" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,0">
                <TextBlock Text="Prof. James Wilson (Coordinator)" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            
                <Separator Background="#FF3E3E42" Margin="10,10"/>
                <Button x:Name="btnSwitchRole" Content="Switch to Lecturer View" Style="{StaticResource NavButtonStyle}" Click="btnSwitchRole_Click"/>
                <Button Content="Logout" Padding="10,5" Background="Transparent" Foreground="#FF4ECDC4" BorderThickness="0"/>
            </StackPanel>
        </DockPanel>
        <Separator Background="#FF3E3E42" Margin="10,10"/>
     
        <!-- Main Content -->
        <Grid Margin="10" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,70,0,30">
                <TextBlock Text="Pending Claims Approval" FontSize="22" Foreground="White" FontWeight="Light" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Claims for Approval -->
            <Border Grid.Row="1" Background="#FF3E3E42" CornerRadius="5" Padding="10">
                <StackPanel>
                    <TextBlock Text="Claims Requiring Review" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <DataGrid Name="dgPendingClaims" IsReadOnly="True" AutoGenerateColumns="False" 
                              HeadersVisibility="Column" Background="#FF505050" BorderThickness="0" Height="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claim ID" Width="Auto" Binding="{Binding ClaimId}"/>
                            <DataGridTextColumn Header="Lecturer" Width="*" Binding="{Binding Lecturer}"/>
                            <DataGridTextColumn Header="Month" Width="Auto" Binding="{Binding Month}"/>
                            <DataGridTextColumn Header="Amount" Width="Auto" Binding="{Binding Amount}"/>
                            <DataGridTemplateColumn Header="Actions" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Review" Padding="8,3" Margin="2" Background="#FF1E90FF" Foreground="White" FontSize="11"/>
                                            <Button Content="Approve" Padding="8,3" Margin="2" Background="#FF4ECDC4" Foreground="Black" FontSize="11"/>
                                            <Button Content="Reject" Padding="8,3" Margin="2" Background="#FFFF6B6B" Foreground="White" FontSize="11"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>