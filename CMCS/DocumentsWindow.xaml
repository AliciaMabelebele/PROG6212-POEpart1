<Window x:Class="CMCS.DocumentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Documents - CMCS" 
        Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <Grid>
        <!-- Navigation Sidebar -->
        <Border Width="220" Background="#FF252526" HorizontalAlignment="Left">
            <StackPanel>
                <StackPanel Margin="15,20" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE1E4;" FontFamily="Segoe UI Symbol" FontSize="30" Foreground="#FF4ECDC4" HorizontalAlignment="Center"/>
                    <TextBlock Text="CMCS" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5"/>
                    <TextBlock Text="Lecturer Portal" Foreground="#FFADADAD" FontSize="11" HorizontalAlignment="Center"/>
                </StackPanel>

                <Separator Background="#FF3E3E42" Margin="10,0"/>

                <StackPanel Margin="10,20">
                    <Button Content="Dashboard" Style="{StaticResource NavButtonStyle}" Click="btnDashboard_Click"/>
                    <Button Content="New Claim" Style="{StaticResource NavButtonStyle}" Click="btnNewClaim_Click"/>
                    <Button Content="Claim History" Style="{StaticResource NavButtonStyle}" Click="btnHistory_Click"/>
                    <Button Content="Documents" Style="{StaticResource NavButtonStyle}" Background="#FF4ECDC4" Foreground="Black"/>
                    <Button Content="Profile" Style="{StaticResource NavButtonStyle}" Click="btnProfile_Click"/>
                </StackPanel>

                <Separator Background="#FF3E3E42" Margin="10,20"/>

                <StackPanel Margin="15,0" VerticalAlignment="Bottom">
                    <TextBlock Text="Dr. Sarah Smith" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock Text="sarah.smith@university.ac.za" Foreground="#FFADADAD" FontSize="10" HorizontalAlignment="Center" Margin="0,5"/>
                    <Button Content="Logout" Margin="0,20,0,10" Padding="10,5" 
                            Background="Transparent" Foreground="#FF4ECDC4" BorderThickness="0"
                            Click="btnLogout_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="220,0,0,0">
            <DockPanel Background="#FF252526" VerticalAlignment="Top" Height="60">
                <TextBlock Text="DOCUMENT MANAGEMENT" Foreground="White" FontSize="16" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="20,0"/>
            </DockPanel>

            <Grid Margin="20" VerticalAlignment="Top">
                <!-- Upload Section -->
                <Border Background="#FF3E3E42" CornerRadius="5" Padding="15" Margin="0,20,0,20">
                    <StackPanel>
                        <TextBlock Text="Upload New Document" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Select Files" Margin="5" Padding="15,8" 
                                    Background="#FF1E90FF" Foreground="White" FontWeight="Bold"
                                    Click="btnSelectFiles_Click"/>
                            <ComboBox Width="150" Margin="5" Padding="10" SelectedIndex="0">
                                <ComboBoxItem>Select Claim</ComboBoxItem>
                                <ComboBoxItem>CLM-1001 (Jan 2024)</ComboBoxItem>
                                <ComboBoxItem>CLM-1002 (Feb 2024)</ComboBoxItem>
                                <ComboBoxItem>CLM-1003 (Mar 2024)</ComboBoxItem>
                            </ComboBox>
                            <Button Content="Upload" Margin="5" Padding="15,8" 
                                    Background="#FF4ECDC4" Foreground="Black" FontWeight="Bold"
                                    Click="btnUpload_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Documents List -->
                <Border Background="#FF3E3E42" CornerRadius="5" Padding="10" Margin="0,120,0,0">
                    <StackPanel>
                        <TextBlock Text="My Documents" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                        <DataGrid Name="dgDocuments" IsReadOnly="True" AutoGenerateColumns="False" 
                                  HeadersVisibility="Column" Background="#FF505050" BorderThickness="0" Height="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Document Name" Width="*" Binding="{Binding FileName}"/>
                                <DataGridTextColumn Header="Claim ID" Width="Auto" Binding="{Binding ClaimId}"/>
                                <DataGridTextColumn Header="Type" Width="Auto" Binding="{Binding DocumentType}"/>
                                <DataGridTextColumn Header="Size" Width="Auto" Binding="{Binding FileSize}"/>
                                <DataGridTextColumn Header="Upload Date" Width="Auto" Binding="{Binding UploadDate}"/>
                                <DataGridTemplateColumn Header="Actions" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Download" Padding="6,2" Margin="2" Background="#FF1E90FF" Foreground="White" FontSize="11"
                                                        Click="btnDownload_Click"/>
                                                <Button Content="Delete" Padding="6,2" Margin="2" Background="#FFFF6B6B" Foreground="White" FontSize="11"
                                                        Click="btnDelete_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>